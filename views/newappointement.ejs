<!DOCTYPE html>
<html lang="en">   

        <%- include('templates/header', {titulo: "Pagina Usuario Pro"}) %>

<body>
   
    <%- include('templates/menu') %>

        <div class="container">
            <br>
            <br>
            
                <form  id="formulario" action="/newappointement" method="POST">
                    <div class="input-group">
                        
                        <div class="row">  
                            <div class="col-6">
                                <input required id="date" type="date" name="date"   class="form-control">
